@model PainTracker.Models.Medicine

<h4>Medicine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="MedName" class="control-label">Medicine Name</label>
                <input asp-for="MedName" class="form-control" />
                <span asp-validation-for="MedName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedType" class="control-label">Medicine Type</label>
                <input asp-for="MedType" class="form-control" />
                <span asp-validation-for="MedType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MedDescription" class="control-label">Medicine Description</label>
                <input asp-for="MedDescription" class="form-control" />
                <span asp-validation-for="MedDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
